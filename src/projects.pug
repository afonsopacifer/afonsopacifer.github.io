extends ./layouts/classic.pug

block page_infos
	-var title = "Projects - Afonso Pacifer"
	-var description = "List of open source projects developed by Afonso Pacifer."

block content

	h1(class="heading-lv1") Open Source Projects

	h2(class="heading-lv2") 2017

	for projects17 in projects_2017
		- var name = projects17.name
		- var user = projects17.user
			article.article-box
				span(class="article-box__date")=projects17.date
				a(href=projects17.url class="article-box__link" target="_blank")
					h3(class="article-box__h3")=projects17.name
				a(href=projects17.url class="article-box__text" target="_blank")
					span=projects17.description
				div.article-box__bottom.article-box__bottom--icons-list
					for tech17 in projects17.tech
						img(src="assets/img/tech/"+ tech17 alt=tech17 class="article-box__bottom__icon")

