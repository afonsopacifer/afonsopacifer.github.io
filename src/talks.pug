extends ./layouts/classic.pug

block page_infos
	-var title = "Talks - Afonso Pacifer"
	-var description = "Talks presented by Afonso Pacifer."

block content

	h1(class="heading-lv1") Talks

	h2(class="heading-lv2") 2017

	for talk17 in talks_2017
			article.article-box 
				span(class="article-box__date")=talk17.date

				if talk17.video
					a(href=talk17.video class="article-box__link" target="_blank")
						h3(class="article-box__h3")=talk17.event
				else
					a(href=talk17.slides class="article-box__link" target="_blank")
						h3(class="article-box__h3")=talk17.event

				p.article-box__text
					|#{span=talk17.theme} <br>
					|Attendance: #{span=talk17.attendees} <br>
					|#{span=talk17.local}#{span=talk17.address} <br>
				div.article-box__bottom
					if talk17.slides
						a(href=talk17.slides target="_blank" class="article-box__bottom__btn") Slides
					if talk17.video
						a(href=talk17.video target="_blank" class="article-box__bottom__btn") video

