extends ./layouts/classic.pug

block page_infos
	-var title = "Talks - Afonso Pacifer"
	-var description = "Talks presented by Afonso Pacifer."

block content

	h1(class="heading-lv1") Talks

	h2(class="heading-lv2") 2017

	for talk17 in talks_2017
			article.article
				span(class="text-date")=talk17.date

				if talk17.video
					a(href=talk17.video class="text-link" target="_blank")
						h3(class="heading-lv3")=talk17.event
				else
					a(href=talk17.slides class="text-link" target="_blank")
						h3(class="heading-lv3")=talk17.event

				p.sub-heading
					|#{span=talk17.theme} <br>
					|Attendance: #{span=talk17.attendees} <br>
					|#{span=talk17.local}#{span=talk17.address} <br>
					if talk17.slides
						a(href=talk17.slides target="_blank" class="btn") Slides
					if talk17.video
						a(href=talk17.video target="_blank" class="btn") video

	h2(class="heading-lv2") 2016

	for talk16 in talks_2016
			article.article
				span(class="text-date")=talk16.date

				if talk16.video
					a(href=talk16.video class="text-link" target="_blank")
						h3(class="heading-lv3")=talk16.event
				else
					a(href=talk16.slides class="text-link" target="_blank")
						h3(class="heading-lv3")=talk16.event

				p.sub-heading
					|#{span=talk16.theme} <br>
					|Attendance: #{span=talk16.attendees} <br>
					|#{span=talk16.local}#{span=talk16.address} <br>
					a(href=talk16.slides target="_blank" class="btn") Slides
					if talk16.video
						a(href=talk16.video target="_blank" class="btn") video

	h2(class="heading-lv2") 2015

	for talk15 in talks_2015
			article.article
				span(class="text-date")=talk15.date
				a(href=talk15.url class="text-link" target="_blank")
					h3(class="heading-lv3")=talk15.event
				p.sub-heading
					|#{span=talk15.theme} <br>
					|Attendance: #{span=talk15.attendees} <br>
					|#{span=talk15.local}#{span=talk15.address} <br>
					a(href=talk15.slides target="_blank" class="btn") Slides
					if talk15.video
						a(href=talk15.video target="_blank" class="btn") video
