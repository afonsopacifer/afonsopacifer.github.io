mixin postBox(date, url, name, lang, local)
	article.article-box
		span(class="article-box__date")=date
		a(href=url class="article-box__link" target="_blank")
			h3(class="article-box__h3")=name
		div.article-box__bottom
			if lang
				include ../includes/svg-icons/br-flag.pug
			span(class="article-box__bottom__text") Avaible on #{span=local}
