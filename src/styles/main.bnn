/* Global
============================== */

html, body {
  height: 100%;
}

* {
  bnn-box: inside;
}

body {
  display: flex;
  flex-wrap: wrap;
  font-family: 'Roboto', sans-serif;
  font-size: 16px;
  background-color: var(--background-default);
  color: var(--text-deafult);
  transition: background-color .3s;
}

/* Configs
============================== */

body {
  /* Positioning */

  /* Display & Box Model */
  --aside-width: 230px;
  --internal-spacing: 10px;
  --external-spacing: 30px;

  /* Design */

  /* Color Palette */
  --highlight-R: 0;
  --highlight-G: 0;
  --highlight-B: 0;
  --highlight-opacity: 1;

  --highlight-RGB:
    var(--highlight-R),
    var(--highlight-G),
    var(--highlight-B)
  ;

  --highlight: rgba(
    var(--highlight-RGB),
    var(--highlight-opacity)
  );

  --highlight-light: rgba(
    var(--highlight-RGB),
    calc(var(--highlight-opacity)/3)
  );

  --background-default: #fff;
  --text-deafult: #000;
  --complementary: #c9c9c9;

}

/* Aside
============================== */

#aside {
  bnn-size: var(--aside-width) 100%;
  border-right: 1px solid var(--complementary);
  position: fixed;
  padding-top: var(--external-spacing);
  margin-bottom: var(--external-spacing);
}

@media (max-width: 690px) {
  #aside {
    width: 100%;
    height: auto;
    position: relative;
    border-right: 0;
    border-bottom: 1px solid var(--complementary);
  }
}


/* Profile
========== */

.perfil-picture {
  border-radius: 50%;
  overflow: hidden;
  margin-top: var(--internal-spacing);
  margin-bottom: var(--internal-spacing);
  bnn-position: center;
  display: block;
}

.perfil-user {
  font-weight: 300;
  width: 100%;
  text-align: center;
  display: inline-block;;
  margin-top: var(--internal-spacing);
  margin-bottom: var(--internal-spacing);
  bnn-position: center;
  font-family: 'Shadows Into Light Two', cursive;
  font-size: 2em;
  color: var(--highlight);
}

/* Social
========== */

.social-icons {
  margin-top: var(--internal-spacing);
  margin-bottom: var(--internal-spacing);
  text-align: center;
  display: inline-block;
  width: 100%;
}

.social-link {
  padding: 5px;
}

.social-link svg {
  transition: fill .1s;
  fill: var(--highlight-light);
}

.social-link svg:hover {
  fill: var(--highlight);
}

/* Menu
========== */

.menu {
  padding-left: 0;
  margin-top: var(--internal-spacing);
  margin-bottom: var(--internal-spacing);
  bnn-position: center;
  text-align: center;
}

.menu-item {
  list-style: none;
}

.menu-link {
  text-decoration: none;
  padding: 5px;
  display: inline-block;
  color: var(--text-deafult);
  font-weight: 300;
  transition: color .1s;
}

.menu-link:hover {
  color:var(--highlight);
  text-decoration: underline;
}

/* Main
============================== */

#content {
  margin-left: var(--aside-width);
  flex: 1;
  padding: var(--external-spacing);
}

@media (max-width: 690px) {
  #content {
    margin-left: 0;
    width: 100%;
  }
}

.container {
  bnn-width: 700px;
  bnn-position: center;
}

.article {
  margin-top: var(--external-spacing);
  margin-bottom: var(--external-spacing);
}

/* Texts
============================== */
.heading-lv1 {
  margin-top: var(--external-spacing);
  margin-bottom: var(--external-spacing);
  font-weight: 700;
  font-family: 'Shadows Into Light Two', cursive;
  font-size: 2.5em;
  color: var(--highlight)
}

.heading-lv2 {
  border-bottom: 5px solid var(--highlight-light);
  display: inline-block;
  margin-top: calc(var(--external-spacing)/3);
  margin-bottom: calc(var(--external-spacing)/3);
  padding: 5px;
  font-size: 1.5em;
  font-weight: 700;
}

.heading-lv3 {
  margin-top: calc(var(--external-spacing)/3);
  margin-bottom: calc(var(--external-spacing)/3);
  padding: 0;
  font-size: 1.4em;
  font-weight: 300;
}

.sub-heading {
  color: var(--complementary);
  font-weight: 300;
  font-size: 1em;
  text-decoration: none;
}

.paragraph {
  font-weight: 300;
  font-size: 1.2em;
}

.text-date {
  color: var(--complementary);
  float: right;
  font-size: 0.8em;
  font-weight: 300;
  margin-left: var(--internal-spacing)
}

/* Links
============================== */

.text-link {
  color: var(--highlight);
  text-decoration: none;
  font-weight: 300;
  transition: color .1s;
}

.text-link:hover {
  color: var(--highlight-light);
  text-decoration: underline;
}
